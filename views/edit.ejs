<%- include("./partials/header")  %> 
<div class="container">
  <div class="section">
      <div class="valign-wrapper section">
        <div class="container item">
          <h1>Edit: <%=ingredient.item%></h1>
          <form action="/ingredients/<%=ingredient._id%>?_method=PUT" method="POST">
            <div class="input-field">
              <label for="description"></label>
              <textarea id="description" name="description" class="materialize-textarea"><%=ingredient.description%></textarea>
            </div>
            <a href="javascript:history.back()" class="btn-floating btn-flat btn-large waves-effect waves-light red"><i class="material-icons">arrow_back</i></a>
            <!-- <button class="btn-floating btn-flat btn-large waves-effect red"><i class="material-icons">add</i></button> -->
            <button class="btn-floating btn-flat btn-large waves-effect red"><i class="material-icons">check</i></button>
          </form> 
        </div>
      </div>
  </div>
</div>

